        {
            "name": "python-bindings-test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/wrapper/python/test_python_bindings.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/build/bin",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/build/bin",
                "CHI_REPO_PATH": "${workspaceFolder}/build/bin",
                "CHIMAERA_TEST_MODE": "1"
            },
            "preLaunchTask": "build-python-bindings"
        },
        {
            "name": "runtime-dbg",
            "type": "cppdbg",
            "request": "launch",
            "program": "echo",
            "miDebuggerServerAddress": "localhost:4000",
            "miDebuggerPath": "/usr/bin/gdb",
            "cwd": "${workspaceFolder}",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "externalConsole": true,
            "logging": {
                "engineLogging": false
            }
        },
        {
            "name": "app-dbg",
            "type": "cppdbg",
            "request": "launch",
            "program": "echo",
            "miDebuggerServerAddress": "localhost:4001",
            "miDebuggerPath": "/usr/bin/gdb",
            "cwd": "${workspaceFolder}",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
