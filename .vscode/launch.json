{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "cte-core-unit-tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/cte_core_unit_tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "environment": [
                {
                    "name": "CHI_REPO_PATH",
                    "value": "${workspaceFolder}/build/bin"
                },
                {
                    "name": "CHIMAERA_TEST_MODE",
                    "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
