            "logging": {
                "engineLogging": false
            }
        },
        {
            "name": "python-bindings-ctest",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/ctest",
            "args": [
                "--test-dir",
                "${workspaceFolder}/build",
                "-R",
                "python_bindings_test",
                "-V"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "environment": [
                {
                    "name": "CHI_REPO_PATH",
                    "value": "${workspaceFolder}/build/bin"
                },
                {
                    "name": "CHIMAERA_TEST_MODE",
                    "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
